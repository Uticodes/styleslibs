<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="cardTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/neutral_white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
    </style>

    <style name="cardSubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/neutral_white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
    </style>

    <style name="FullScreenDialog" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:padding">0dp</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="UONTextView" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
    </style>

    <style name="UONSubTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textSize">20sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
    </style>

    <style name="switchView" parent="TextAppearance.AppCompat.Widget.Switch">
        <item name="background">@color/colorPrimary</item>
    </style>

    <style name="toolbarTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/circular_pro_bold</item>
    </style>

    <style name="appVersionText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/circular_pro_book</item>
    </style>

    <style name="UONTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/tabLayoutTextAppearance</item>
    </style>

    <style name="tabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
        <item name="android:lineSpacingExtra">4dp</item>
    </style>

    <style name="tabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="dialogTitleText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_blue_four</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
    </style>

    <style name="dialogSecondText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_one</item>
        <item name="lineSpacing">0.75dp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
    </style>

    <style name="DialogButtonOne" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/circular_pro_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="DialogButtonTwo" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/circular_pro_bold</item>
        <item name="android:textColor">@color/bright_pink</item>
    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashProgressBar" parent="Theme.AppCompat">
        <item name="android:indeterminateOnly">true</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:scaleX">-1</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="Theme.MaterialComponents.Light">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="termsOfUseToolbar" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:lineSpacingExtra">5dp</item>
        <item name="fontFamily">@font/circular_pro_bold</item>
    </style>

    <style name="termsOfUseHeader" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primary_blue</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
    </style>

    <style name="termsOfUseText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_one</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
    </style>

    <style name="tourDescriptionText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/neutral_white</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
    </style>

    <style name="tourDistanceText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/neutral_white</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
    </style>

    <style name="tourOverViewDescriptionText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
        <item name="android:lineSpacingExtra">4dp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
    </style>

    <style name="tourCampusName" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:lineSpacingExtra">3dp</item>
        <item name="fontFamily">@font/circular_pro_book</item>
    </style>

</resources>
